<div class="container">
  <h3>Users</h3>
  <table class="striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Title</th>
        <th>Email</th>
        <th>Role</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% _.each(users, function (user) { %>
        <tr data-id="<%= user.id %>" data-model="user">
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.title %></td>
          <td><%= user.email %></td>
          <% if(user.admin) {%>
            <td><img src="/images/admin.png" alt="admin"></td>
          <% } else { %>
            <td><img src="/images/pawn.png" alt="user"></td>
          <% } %>
          <td><a href="/user/show/<%= user.id %>" class="btn-floating blue"><i class="material-icons">visibility</i></a></td>
          <td><a href="/user/edit/<%= user.id %>" class="btn-floating green"><i class="material-icons">edit</i></a></td>
          <td><a href="/user/destroy/<%= user.id %>" class="btn-floating red"><i class="material-icons">delete</i></a></td>

          <td>
            <form action="/user/destroy/<%= user.id %>" method="POST">
              <input type="hidden" name="_method" value="delete"/>
              <input type="submit" class="btn-floating red" value="DEL"/>
              <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
            </form>
          </td>

        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<div class="container">
  <hr>
  <footer class="footer">
    <div class="right">
      <a href="http://sailsjs.com/">sails.js</a>
      <div>tutorial by GHEZAL Mohammed Amine<br> and GHEZAL Sid Ahmed</div>
    </div>
  </footer>
</div>
